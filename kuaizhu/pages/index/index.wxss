/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.user-commeon{
  margin-top: 300px;
}

.header{
  margin-top: 0px;
  z-index: 1; 
  position:fixed; 
  top:0;
  height: 42px;
  width: 100%;
  background-color: #FFFFFF;
  display: flex;
  justify-content: center;  
  box-shadow:10px 15px 10px -20px #444C5B;
}
.header .header-childText{
  flex: 1;
  height: 60rpx;
  align-self: center; 
  justify-content: center; 
}
.header-childText .header-childText-image{
  width: 40rpx;
  height: 40rpx;
  align-self: center; 
  display: table-cell;
 
  padding:30rpx;
  vertical-align: middle;
}
.header-childText .header-childText-text{
  color: #666D7B; 
  display: table-cell;
  vertical-align: middle;
  
  padding:0px;
  text-align: left;
  font-size: 30rpx;
}

.scrollView{
  margin-top: 30px;
}

/*index list*/
.index-list-item {
  background: #FFF;
  padding: 15rpx 30rpx; 
  overflow: hidden;
}
.index-list-item:active {
  background: #EEE;
}
.index-list-item .cover {
  float: left;
  width: 140rpx;
  height: 210rpx;
  overflow: hidden;
}
.index-list-item .cover image.cover-img {
  width: 100%;
  height: 100%;
}
.index-list-item .content {
  margin-left: 160rpx;
}
.index-list-item .title {
  font-size: 35rpx;
  font-weight:500;
  height: 60rpx;
  width: 300rpx;
  margin-top: 0rpx;
  margin-left: 0rpx;
  margin-right: 0rpx;
  overflow: hidden;
  color: #444C5B;
  text-align: left;
}

.index-list-item .rentTags{
  height: 30rpx;
  color: #88909F;
  font-size: 30rpx;
  margin-top: 0rpx;
}

.index-list-item .opertionTags{
  height: 30rpx;
  color: #2FE3C3;
  font-size: 30rpx;
  margin-top: 20rpx;
}

.index-list-item .opertionText{
  /* Rectangle 2 Copy 2: */
border: 0 solid #84A6E2;
border-width: 0.5rpx;
border-radius: 1rpx;


/* 精选房源: */
font-family: PingFangSC-Regular;
font-size: 25rpx;
color: #84A6E2;
}

.index-list-item .desc  {
  display: flex;
  margin-top: 20rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.index-list-item .rentPrice{
  flex: 2;
  color: #FF6953;
  font-size: 30rpx;
}

.index-list-item .rentTime{
  flex: 1;
  text-align: right;
  margin-right: 10rpx;
  font-size: 30rpx;
  color: #B7BDCB;
}
.float-action {
  position: absolute;
  bottom: 20px;
  right: 20px; 
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  /* box-shadow: 2px 2px 10px #AAA; */
  z-index: 1;
}
.float-action .iCon{
  width: 150rpx;
  height: 150rpx;
  object-fit:cover;
}


/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  
/*content*/  
.drawer_box {  
  width: 614rpx;
  height: 586rpx;  
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: #FFFFFF;  
  margin: -150px 50rpx 0 50rpx;  
  border-radius: 3px;  
}  

  

